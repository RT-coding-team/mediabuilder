[
{% for slug, files in media %}
    {% for file in files %}
        {
            "date": "{{ file.date }}",
            "filename": "{{ file.filename }}",
            "filepath": "{{ absolute_url(file.filepath) }}",
            "is_slim": {{ file.is_slim | json_encode }},
            "package": "{{ file.package }}",
            "timestamp": {{ file.timestamp }}
        }
        {% if not loop.last %},{% endif %}
    {% endfor %}
{% endfor %}
]
