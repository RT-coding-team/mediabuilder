{% extends '@bolt/_base/layout.html.twig' %}

{% block title %}<i class="fas fa-boxes"></i> Package Manager{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/package-manager.css') }}" />
{% endblock %}
{% block main %}
    <div id="resources-wrapper" class="flex-row">
        <div id="resources-collections" class="flex-col-50">
            <h3><i class="fas fa-layer-group"></i> Collections</h3>
            <table class="table table-sm table-hover">
                <tbody>
                    {% for collection in collections %}
                        <tr>
                            <td><input type="checkbox" class="include-checkbox" data-slug="{{ collection.slug }}" data-packages="{{ collection.getPackages()|join('|') }}"></td>
                            <td>{{ collection.title }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div id="resources-singles" class="flex-col-50">
            <h3><i class="fas fa-square"></i> Singles</h3>
            <table class="table table-sm table-hover">
                <tbody>
                    {% for single in singles %}
                        <tr>
                            <td><input type="checkbox" class="include-checkbox" data-slug="{{ single.slug }}" data-packages="{{ single.getPackages()|join('|') }}"></td>
                            <td>{{ single.title }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/package-manager.js') }}"></script>
{% endblock %}
